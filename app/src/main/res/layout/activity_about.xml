<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
            android:id="@+id/activity.about.tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/activity_about_title"
            android:minHeight="52dp"
            android:background="@color/colorTitleLists"
            android:gravity="center" android:textColor="@android:color/white"/>
    <TextView
            android:id="@+id/activity.about.tvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/activity_about_text"
            android:padding="5dp"
    />

</LinearLayout>