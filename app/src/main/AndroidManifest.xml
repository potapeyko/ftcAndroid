<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="potapeyko.rss">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activities.MyBaseActivity"/>
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.NewChanelActivityMy"/>
        <activity android:name=".activities.AboutAppActivityMy"/>
        <activity android:name=".activities.ChanelChangeActivityMy"/>
        <activity android:name=".activities.FullNewsActivity"/>

        <service
                android:name=".activities.AddChanelService"
                android:enabled="true"
                android:exported="true">
        </service>
        <service
                android:name=".activities.CheckNewsService"
                android:enabled="true"
                android:exported="true">
        </service>
    </application>

</manifest>