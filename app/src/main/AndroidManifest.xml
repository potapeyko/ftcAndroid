<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="potapeyko.rss">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:allowBackup="false"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activities.MyBaseActivity"/>

        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.NewChanelActivityMy"/>
        <activity android:name=".activities.AboutAppActivityMy"/>
        <activity android:name=".activities.ChannelChangeActivity"/>
        <activity android:name=".activities.FullNewsActivity"/>
        <activity android:name=".activities.SettingsActivity"/>


        <service
                android:name=".activities.AddIntentService"
                android:enabled="true"
                >
        </service>
        <service
                android:name=".activities.UpdateIntentService"
                android:enabled="true"
               >
        </service>
        <receiver android:name=".utils.UpdateAlarmListener"/>
    </application>

</manifest>