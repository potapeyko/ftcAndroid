<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="potapeyko.rss">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.QUICKBOOT_POWERON"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:name=".activities.MyApplication"
            android:allowBackup="false"
            android:enabled="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".activities.MyBaseActivity"
        />
        <activity
                android:name=".activities.Main2Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.NewChanelActivity"/>
        <activity android:name=".activities.AboutAppActivity"/>
        <activity android:name=".activities.ChannelChangeActivity"/>
        <activity android:name=".activities.FullNewsActivity"/>
        <activity android:name=".activities.SettingsActivity">
        </activity>

        <service
                android:name=".activities.AddChannelIntentService"
                android:enabled="true">
        </service>
        <service
                android:name=".activities.UpdateChannelIntentService"
                android:enabled="true">
        </service>
        <service
                android:name=".activities.UpdateChannelIntentServiceStopper"
                android:enabled="true">
        </service>

        <receiver android:name=".utils.UpdateAlarmListener">
        </receiver>
        <receiver android:name=".activities.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.QUICKBOOT_POWERON"/>
                <action android:name="com.htc.intent.action.QUICKBOOT_POWERON"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>